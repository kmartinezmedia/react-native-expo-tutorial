{
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-native",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "jest"
    ],
    "noEmit": true
  },
  "files": [
    "lib/global.d.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts*"
  ]
}